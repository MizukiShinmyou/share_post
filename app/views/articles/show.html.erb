<%= flash_messages %>

<div>
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @article.content %>
  </p>
</div>

<% if @article.thumbnail.attached? %>
  <p>
    <strong>Thumbnail:</strong>
    <%= image_tag @article.thumbnail %>
  </p>
<% end %>

<div>
  <%= link_to "Back to articles", articles_path %>
  <%= link_to "Edit", edit_article_path(@article) %>
</div>